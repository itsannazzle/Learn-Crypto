<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="primaryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="primaryButton16">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="title24">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>
