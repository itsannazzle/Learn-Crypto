<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="primaryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="primaryButton_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="primaryButton16">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name="body">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <!--    Bottom sheet-->
    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/corner_top</item>
    </style>

    <style name="dialogAnimation">

    </style>

    <style name="BottomDialogTheme" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:windowAnimationStyle">@style/dialogAnimation</item>
        <item name="android:popupElevation">10dp</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="card_style">
        <item name="android:layout_marginEnd">@dimen/dimen_8</item>
        <item name="android:layout_marginBottom">@dimen/dimen_8</item>
        <item name="cardBackgroundColor">@color/primaryAccent</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="tableLayoutMatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:stretchColumns">2</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="rv_grid_horizontal_match_wrap">
        <item name="layoutManager">androidx.recyclerview.widget.GridLayoutManager</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/dimen_8</item>
    </style>


</resources>