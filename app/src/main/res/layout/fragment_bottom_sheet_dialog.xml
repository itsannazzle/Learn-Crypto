<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="10dp"
    android:padding="16dp"
    tools:context=".features.ui.dialog.BottomSheetDialog">

    <TextView
        android:id="@+id/textViewTagName"
        style="@style/title"
        android:textColor="@color/primaryAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textSize="36sp"
        android:layout_marginBottom="@dimen/dimen_16"
        app:layout_constraintBottom_toTopOf="@+id/textViewTagDesc"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/hello_blank_fragment" />

    <TextView
        android:id="@+id/textViewTagDesc"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginBottom="56dp"
        android:textColor="@color/primaryAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@tools:sample/lorem/random" />

    <ProgressBar
        android:id="@+id/progressBarBottomSheet"
        style="?android:attr/progressBarStyle"
        android:layout_width="42dp"
        android:layout_height="33dp"
        android:visibility="gone"
        android:indeterminateTint="@color/primaryAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>